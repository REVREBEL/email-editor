{
	"name": "vue-email-editor",
	"version": "2.1.5",
	"type": "module",
	"main": "dist/vue-email-editor.es",
	"module": "dist/vue-email-editor.es.js",
	"unpkg": "dist/vue-email-editor.umd.js",
	"jsdelivr": "dist/vue-email-editor.umd.js",
	"types": "dist/vue-email-editor.d.ts",
	"exports": {
		".": {
			"types": "./dist/vue-email-editor.d.ts",
			"import": "./dist/vue-email-editor.es.js",
			"require": "./dist/vue-email-editor.cjs.js",
			"default": "./dist/vue-email-editor.es.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite --host",
		"preview": "vite preview --host",
		"ci": "npm run lint && npm run type-check && npm run test",
		"test": "vitest",
		"prepare": "husky",
		"pre-commit": "lint-staged",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"lint-staged": "lint-staged",
		"format": "prettier --write .",
		"clean": "rimraf dist",
		"build-types": "vue-tsc --emitDeclarationOnly",
		"type-check": "vue-tsc --noEmit",
		"adjust-types": "node ./scripts/adjust-types.js",
		"build": "vite build",
		"build-bundle": "npm run clean && npm run build && npm run build-types && npm run adjust-types",
		"release": "npm run build-bundle && npm publish",
		"light-clean": "rimraf dist",
		"full-clean": "rimraf dist node_modules .turbo .pnpm-store",
		"super-clean": "rm -rf node_modules dist .turbo .pnpm-store",
		"inspector": "pnpm exec eslint --inspect-config"
	},
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --fix",
		"*.{vue,scss,css,md}": "prettier --write"
	},
	"dependencies": {
		"@vue/tsconfig": "^0.8.1",
		"unlayer-types": "latest",
		"vue": "^3.5.22"
	},
	"peerDependencies": {
		"vue": "^3.2.0",
		"vue-router": "^4.0.0"
	},
	"devDependencies": {
		"@babel/types": "^7.28.4",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.36.0",
		"@stylistic/eslint-plugin": "^5.4.0",
		"@typescript-eslint/eslint-plugin": "^8.44.1",
		"@typescript-eslint/parser": "^8.44.1",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vue/compiler-sfc": "^3.5.22",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-vue": "^10.5.0",
		"globals": "^16.4.0",
		"husky": "9.1.7",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vue-dts-gen": "^0.3.0",
		"vue-eslint-parser": "^10.2.0",
		"vue-loader": "^17.4.2",
		"vue-router": "4",
		"vue-tsc": "^3.0.8"
	},
	"packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}
