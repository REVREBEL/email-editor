{
	"name": "vue-email-editor",
	"version": "2.1.5",
	"type": "module",
	"main": "dist/vue-email-editor.cjs.js",
	"module": "dist/vue-email-editor.es.js",
	"unpkg": "dist/vue-email-editor.umd.js",
	"jsdelivr": "dist/vue-email-editor.umd.js",
	"types": "dist/vue-email-editor.d.ts",
	"exports": {
		".": {
			"types": "./dist/vue-email-editor.d.ts",
			"import": "./dist/vue-email-editor.es.js",
			"require": "./dist/vue-email-editor.cjs.js",
			"default": "./dist/vue-email-editor.es.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"adjust-types": "sed -i '' '1s#^/// <reference types=\"unlayer-types/embed.d.ts\" />##' ./dist/components/*.d.ts",
		"build-types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist",
		"build-bundle": "vite build --config vite.lib.config.js && npm run build-types",
		"release": "npm run build-bundle && npm publish",
		"clean": "rm -rf node_modules dist .turbo .pnpm-store"
	},
	"dependencies": {
		"unlayer-types": "latest",
		"vue": "^3.2.13"
	},
	"peerDependencies": {
		"vue": "^3.2.0"
	},
	"devDependencies": {
		"@babel/types": "^7.24.7",
		"@eslint/js": "^9.6.0",
		"@typescript-eslint/eslint-plugin": "^8.8.1",
		"@typescript-eslint/parser": "^8.8.1",
		"@vitejs/plugin-vue": "^5.0.5",
		"@vue/compiler-sfc": "^3.5.22",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-vue": "^9.33.0",
		"prettier": "^2.4.1",
		"typescript": "^5.2.2",
		"vite": "^5.3.2",
		"vue-dts-gen": "^0.3.0",
		"vue-eslint-parser": "^9.4.3",
		"vue-loader": "^17.4.2",
		"vue-tsc": "^2.0.22"
	}
}